<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground">

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/maintitle"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton_travel"
        style="@android:style/Widget.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:srcCompat="@drawable/selectmenu_travel" />

    <ImageButton
        android:id="@+id/imageButton_calc"
        style="@android:style/Widget.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:srcCompat="@drawable/selectmenu_calc" />

    <ImageButton
        android:id="@+id/imageButton_togo"
        style="@android:style/Widget.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:srcCompat="@drawable/selectmenu_wishlist" />

</LinearLayout>